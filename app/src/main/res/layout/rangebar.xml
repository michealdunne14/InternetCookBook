<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimension50">

    <com.appyvet.materialrangebar.RangeBar
        android:id="@+id/rangeBar2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:mrb_pinMaxFont="25sp"
        app:mrb_pinTextColor="@color/colorWhite"
        app:mrb_rangeBarPaddingBottom="10dp"
        app:mrb_selectorSize="10dp"
        app:mrb_temporaryPins="true"
        app:mrb_tickEnd="200"
        app:mrb_tickInterval="10"
        app:mrb_tickStart="10" />

    <TextView
        android:id="@+id/mFilterTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter to Time Limit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>