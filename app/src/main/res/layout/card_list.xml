<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/mCardImageList"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            app:layout_constraintBottom_toTopOf="@+id/mCardName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mCardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/quicksand"
            android:text="helloworld"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/mCardDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mCardImageList" />

        <TextView
            android:id="@+id/mCardDescription"
            android:layout_width="149dp"
            android:layout_height="32dp"
            android:layout_below="@id/mCardName"
            android:fontFamily="@font/quicksand"
            android:text="helloworld"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/mCardLocation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mCardName" />

        <TextView
            android:id="@+id/mCardLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mCardDescription"
            android:fontFamily="@font/quicksand"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/mDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mCardDescription" />

        <TextView
            android:id="@+id/mDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mCardLocation"
            android:fontFamily="@font/quicksand"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/mCardNote"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mCardLocation" />


        <EditText
            android:id="@+id/mCardNote"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:ems="10"
            android:fontFamily="@font/quicksand"
            android:hint="Note"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/mShareFood"
            app:layout_constraintEnd_toStartOf="@+id/mCardSendButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mDate" />


        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="@dimen/dimension50"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageButton"
            app:layout_constraintTop_toBottomOf="@+id/mCardNote"
            android:background="@null"
            app:srcCompat="@drawable/baseline_favorite_black_36" />

        <ImageButton
            android:id="@+id/mCardSendButton"
            android:layout_width="@dimen/dimension50"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@+id/mCardNote"
            android:layout_toRightOf="@+id/mCardNote"
            android:background="@null"
            app:layout_constraintBottom_toBottomOf="@+id/mCardNote"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mCardNote"
            app:layout_constraintTop_toTopOf="@+id/mCardNote"
            app:srcCompat="@android:drawable/ic_menu_send" />

        <ImageButton
            android:id="@+id/mShareFood"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:background="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mCardNote"
            app:srcCompat="@drawable/baseline_share_black_36" />

        <ImageButton
            android:id="@+id/mMakeFood"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:background="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mShareFood"
            app:layout_constraintTop_toBottomOf="@+id/mCardNote"
            app:srcCompat="@drawable/outline_fastfood_black_36" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="@dimen/dimension50"
            android:layout_height="0dp"
            android:background="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mMakeFood"
            app:layout_constraintTop_toBottomOf="@+id/mCardNote"
            app:srcCompat="@drawable/baseline_save_black_36" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>