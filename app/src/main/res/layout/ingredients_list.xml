<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mIngredientsName"
            android:layout_width="102dp"
            android:layout_height="32dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/mFoodPicture"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/mFoodPicture"
            android:layout_width="@dimen/dimension80"
            android:layout_height="@dimen/dimension80"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_panorama_fish_eye_24" />

        <ImageButton
            android:id="@+id/mSelectedIngredient"
            android:layout_width="@dimen/dimension80"
            android:layout_height="@dimen/dimension80"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/camera_notification" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>